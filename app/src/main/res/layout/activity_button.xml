<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ButtonAct">

    <Button
        android:id="@+id/ChangeBGbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ChangeBG"
        app:layout_constraintEnd_toEndOf="@+id/ToastBtn"
        app:layout_constraintStart_toStartOf="@+id/ToastBtn"
        app:layout_constraintTop_toBottomOf="@+id/ToastBtn" />

    <Button
        android:id="@+id/DisappearBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disappear"
        app:layout_constraintEnd_toEndOf="@+id/ChangeButtonBgBtn"
        app:layout_constraintStart_toStartOf="@+id/ChangeButtonBgBtn"
        app:layout_constraintTop_toBottomOf="@+id/ChangeButtonBgBtn" />

    <Button
        android:id="@+id/ToastBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toast"
        app:layout_constraintEnd_toEndOf="@+id/CloseBtn"
        app:layout_constraintStart_toStartOf="@+id/CloseBtn"
        app:layout_constraintTop_toBottomOf="@+id/CloseBtn" />

    <Button
        android:id="@+id/ChangeButtonBgBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Button BG"
        app:layout_constraintEnd_toEndOf="@+id/ChangeBGbtn"
        app:layout_constraintStart_toStartOf="@+id/ChangeBGbtn"
        app:layout_constraintTop_toBottomOf="@+id/ChangeBGbtn" />

    <Button
        android:id="@+id/CloseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>